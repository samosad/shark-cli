#!/usr/bin/env node

'use strict';

var Liftoff = require('liftoff');

var cli = new Liftoff({
	name: 'shark',
	configName: 'sharkfile',
	nodeFlags: ['--harmony']
});

cli.launch({

}, function(env) {
	if (!env.configPath) {
		console.error('configPath not found "%s"', env.configPath);
		return;
	}

	require(env.configPath);
});